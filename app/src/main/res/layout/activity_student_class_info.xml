    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="签到"
            style="?android:listSeparatorTextViewStyle"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="16dp">

        <Button
                android:id="@+id/btn_signin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

    </LinearLayout>

</LinearLayout>